package game.model;

import java.io.Serializable;

/**
 * 玩家信息类
 */
public class Player implements Serializable{
    // 分数
    private int score;
    // 名字
    private String name;

    public Player( String name) {
        this.name = name;
    }

    public int getScore() {
        return score;
    }

    public void setScore(int score) {
        this.score = score;
    }

    public String getName() {
        return name;
    }

    public void setName(String name) {
        this.name = name;
    }
}
